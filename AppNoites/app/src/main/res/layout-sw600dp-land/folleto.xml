<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fuentes="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="30dp"
    android:orientation="vertical" >

    <com.aranzazu.appnoites15.CustomTextView
        android:id="@+id/textView1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        style="@style/estilo1_pestañas_tablet"
        android:text="@string/folleto2"
       />
    <com.aranzazu.appnoites15.CustomTextView
        android:id="@+id/textView1b"
        style="@style/estilo3_pestañas_tablet"
        android:text="@string/folleto2b"
        />

    <Button
        android:id="@+id/buttoner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/down" />

</LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:layout_marginTop="30dp"
       android:orientation="vertical" >

       <ImageView
           android:id="@+id/p3"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="70dp"
           android:background="@drawable/dialog2" />

   </LinearLayout>

</LinearLayout>
            style="@style/estilo3"
            android:clickable="true"
            android:gravity="left"
            android:onClick="principal3"
            android:text="@string/principal5"
            />

        <com.aranzazu.appnoites15.CustomTextView

            style="@style/estilo3"
            android:clickable="true"
            android:gravity="left"
            android:onClick="principal4"
            android:text="@string/principal6"
            />

        <com.aranzazu.appnoites15.CustomTextView

            style="@style/estilo3"
            android:clickable="true"
            android:gravity="left"
            android:onClick="principal5"
            android:text="@string/principal7"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logos3"
        android:contentDescription="@string/principal"/>

